{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "warn"
      },
      "style": {
        "noDefaultExport": "off",
        "noNamespace": "warn",
        "useConst": "warn",
        "useImportType": "warn"
      },
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              [
                {
                  "source": [":NODE:", ":PACKAGE:", ":PACKAGE_WITH_PROTOCOL:"]
                }
              ],
              [
                {
                  "source": [":ALIAS:"]
                }
              ],
              [
                {
                  "source": [":PATH:"]
                }
              ]
            ],
            "identifierOrder": "lexicographic"
          }
        }
      }
    }
  }
}
